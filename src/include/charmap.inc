DIGIT_BASE EQU $00

DIGITS equs "0123456789"
DIGIT = 0
REPT STRLEN("{DIGITS}")
	charmap STRSUB("{DIGITS}", DIGIT + 1, 1), DIGIT_BASE + DIGIT
DIGIT = DIGIT + 1
ENDR

CHARMAP ".", $0A
CHARMAP "!", $0B
CHARMAP "?", $0C
CHARMAP ",", $0D
CHARMAP "-", $0E
CHARMAP "'", $0F

UPPER_BASE EQU $10

UCHARS equs "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
UCHAR = 0
REPT STRLEN("{UCHARS}")
	charmap STRSUB("{UCHARS}", UCHAR + 1, 1), UPPER_BASE + UCHAR
UCHAR = UCHAR + 1
ENDR

CHARMAP " ", $2A
